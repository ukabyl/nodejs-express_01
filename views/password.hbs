<div class="uk-child-width-expand@s uk-text-center uk-margin-medium-top" uk-grid>
    <div>
        <div class="uk-card uk-card-default uk-card-body">
          <h2>Change password</h2>
          <div class="uk-child-width-1-2 uk-flex uk-flex-center">
            <form method="POST" action="/auth/change-password">
              {{#if error}}
                <div class="uk-alert-danger" uk-alert>
                    <a class="uk-alert-close" uk-close></a>
                    <p>{{error}}</p>
                </div>
              {{/if}}
              <fieldset class="uk-fieldset">
                  <div class="uk-margin">
                      <label class="uk-form-label" for="form-password">Password</label>
                      <input class="uk-input" required type="password" name="password" id="form-password">
                  </div>

                  <input type="text" hidden name="_csrf" value="{{csrf}}">
                  <input type="text" hidden name="token" value="{{token}}">
                  <input type="text" hidden name="userId" value="{{userId}}">

                  <button type="submit" class="uk-button uk-button-primary">Update</button>
              </fieldset>
            </form>
          </div>
        </div>
    </div>
</div>