<h1 class="uk-margin-top">Edit course - {{ course.title }}</h1>

<form method="POST" action="/courses/edit">
    {{#if error}}
        <div class="uk-alert-danger" uk-alert>
            <a class="uk-alert-close" uk-close></a>
            <p>{{error}}</p>
        </div>
    {{/if}}
    <fieldset class="uk-fieldset">
        <div class="uk-margin">
            <label class="uk-form-label" for="form-title">Title</label>
            <input class="uk-input" required type="text" name="title" id="form-title" value="{{course.title}}">
        </div>

        <div class="uk-margin">
            <label class="uk-form-label" for="form-price">Price</label>
            <input class="uk-input" required type="text" name="price" id="form-price" value="{{course.price}}">
        </div>

        <div class="uk-margin">
            <label class="uk-form-label" for="form-url">IMG URL</label>
            <input class="uk-input" required type="text" name="img" id="form-url" value="{{course.img}}">
        </div>

        <input type="text" hidden name="id" value="{{course.id}}">
        <input type="text" hidden name="_csrf" value="{{csrf}}">

        <button type="submit" class="uk-button uk-button-primary">Edit</button>

    </fieldset>
</form>

<form action="/courses/delete" method="POST" class="uk-margin-top">
    <input type="text" hidden name="id" value="{{course.id}}">
    <input type="text" hidden name="_csrf" value="{{csrf}}">
    <button type="submit" class="uk-button uk-button-danger">Delete</button>
</form>