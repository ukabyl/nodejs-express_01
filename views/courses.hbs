<h1>Courses</h1>

{{#if courses.length}}
  <div class="uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
    {{#each courses}}
      <div>
        <div class="uk-card uk-card-default">
          <div class="uk-card-media-top">
              <img src="{{img}}" class="course-img" alt="{{title}}">
          </div>
            <div class="uk-card-header">
                <div class="uk-grid-small uk-flex-middle" uk-grid>
                    <div class="uk-width-expand">
                        <h3 class="uk-card-title uk-margin-remove-bottom">{{title}}</h3>
                        <p class="uk-text-meta uk-margin-remove-top">
                          <span class="price">{{price}} </span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="uk-card-footer uk-margin-auto-top">
                <a href="/courses/{{id}}" class="uk-button uk-button-text">Read more</a>
                {{#if @root.isAuth}}
                  <a href="/courses/{{id}}/edit?allow=true" class="uk-margin-left uk-button uk-button-text">Edit</a>
                  <form action="/cart" method="POST" class="uk-flex uk-flex-end uk-margin-top">
                    <input type="text" name="id" value="{{id}}" hidden>
                    <button type="submit" class="uk-button uk-button-primary">Add to cart</button>
                  </form>
                {{/if}}
            </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>There is no courses yet!</p>
{{/if}}